angular.module('AppMeteo.services_graphs', [])

    .factory('Graphs', function() {
        var chartSeries = [
            {"name": "Temp√©rature moyenne", "data": [3, 1, null, 5, 2], connectNulls: true}
        ];

        var chartType = '';

        var chartConfig = {
            options: {
                chart: {
                    type: chartType
                },
                plotOptions: {
                    series: {
                        stacking: ''
                    }
                }
            },
            series: chartSeries,
            title: {
                text: 'Moyenne par heure'
            },
            loading: false,
            size: {}
        };

        return {
            setChartType: function (newType) {
                chartConfig.options.chart.type = newType;
                if(newType == "column") {
                    chartConfig.options.chart.polar =  true;
                }
            },
            getConfig: function () {
              return chartConfig;
            }
        };
    });