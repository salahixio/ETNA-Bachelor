<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
        <script src="build/main.bundle.js"></script>
        <link rel="stylesheet" type="text/css" href="app/css/bootstrap.css" />
        <link href="app/css/styles.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div ng-app="article">
            <div ng-controller="HeaderController" id="header">
                <nav class="navbar navbar-fixed-top">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">MeanBlog</a>
                        <form class="navbar-right form-inline" role="login" id="login">
                                <input id="pseudo" class="form-control" placeholder="Pseudo" ng-model="pseudo"/>
                                <input id="mdp" class="form-control" placeholder="Mot de passe" ng-model="mdp"/>
                                <button class="btn btn-success">Connexion</button>
                                <img src="app/img/facebook-explode.png" width="35px" heigth="35px"/>
                                <img src="app/img/twitter-explode.png" width="45px" heigth="45px" />
                                <button class="btn btn-primary">Inscription</button>
                        </form>
                    </div>
                </nav>
            </div>
            <div ng-controller="ArticlesController" id="articles">
                <div class="container">
                    <div class="panel panel-primary" ng-repeat="article in articles">
                        <div class="panel-heading">
                            <h3 class="panel-title" ng-bind="article.articleTitre"></h3>
                        </div>
                        <div class="panel-body" ng-bind="article.articleContenu">
                        </div>
                        <div class="panel-footer">
                            <ul class="list-group">
                                <li class="list-group-item">Trop top !</li>
                            </ul>
                            <button class="btn btn-success">Ajouter</button>
                        </div>
                    </div>
                    <nav id="pagination">
                        <ul class="pager">
                            <li class="previous"><a href="#"><span aria-hidden="true">&larr;</span> Older</a></li>
                            <li class="next"><a href="#">Newer <span aria-hidden="true">&rarr;</span></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </body>
</html>