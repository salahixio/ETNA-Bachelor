void    print_invalid_arguments_shop(t_player *player)
{
  my_putstr("#--------------------------------------------#\n");
  my_putstr("|             Argument non valide !          |\n");
  my_putstr("|      Les trois arguments valides sont :    |\n");
  if (player->rupees >= 90)
    my_putstr("|                  magic box                 |\n");
  my_putstr("|                  mushrooms                 |\n");
  my_putstr("|                    quit                    |\n");
  my_putstr("#--------------------------------------------#\n");
}

